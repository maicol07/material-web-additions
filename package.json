{
  "name": "@maicol07/material-web-additions",
  "version": "1.4.2",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.6.11",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Material Web Components Additions",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maicol07/material-web-additions.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maicol07/material-web-additions/issues"
  },
  "homepage": "https://main--625eadb22bf40d003a32215a.chromatic.com/",
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "build:catalog": "wireit",
    "build:analyzer": "wireit",
    "update-docs": "wireit"
  },
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "**/*.scss",
    "!css-to-ts.js",
    "!web-test-runner.config.js",
    "!**/test/**",
    "!**/testing/**",
    "!**/*_test.*",
    "!.wireit/**",
    "!catalog",
    "!scripts/"
  ],
  "dependencies": {
    "@material/card": "^14.0.0",
    "@material/data-table": "^14.0.0",
    "@material/layout-grid": "^14.0.0",
    "@material/mwc-base": "^0.27.0",
    "lit": "^2.8.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "@material/web": "1.0.0"
  },
  "devDependencies": {
    "@lit-labs/analyzer": "^0.9.2",
    "@material/web": "1.0.0",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@web-types/lit": "2.0.0-3",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-wc": "^1.5.0",
    "sass": "~1.66.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "wireit": "^0.13.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "css-loader",
        "sass-loader",
        "style-loader"
      ]
    }
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts",
        "!catalog",
        "!scripts/",
        "!node_modules"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!css-to-ts.js",
        "!web-test-runner.config.js",
        "!types/",
        "!catalog",
        "!scripts/"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "build:css-to-ts"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules -o -path ./catalog \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js",
        "!scripts/",
        "!node_modules"
      ],
      "output": [
        "**/*.css.ts",
        "!catalog",
        "!scripts/"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -vE 'node_modules|catalog')",
      "files": [
        "**/*.scss",
        "!catalog",
        "!scripts/",
        "!node_modules"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map",
        "!catalog",
        "!scripts/"
      ]
    },
    "build:catalog": {
      "dependencies": [
        "./catalog:build:prod"
      ]
    },
    "build:analyzer": {
      "command": "tsc -b scripts/tsconfig.json --pretty",
      "files": [
        "scripts/tsconfig.json",
        "scripts/analyzer/**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        "scripts/.tsbuildinfo",
        "scripts/analyzer/**/*.js",
        "scripts/analyzer/**/*.js.map",
        "scripts/analyzer/**/*.d.ts"
      ],
      "clean": "if-file-deleted"
    },
    "update-docs": {
      "command": "node scripts/analyzer/update-docs.js",
      "files": [
        "docs/components/*.md",
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts",
        "!catalog",
        "!scripts/",
        "scripts/analyzer/update-docs.js",
        "!node_modules"
      ],
      "output": [],
      "dependencies": [
        "build:analyzer"
      ]
    }
  }
}
